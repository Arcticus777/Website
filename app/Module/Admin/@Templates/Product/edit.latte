{templateType Minecord\Module\Admin\Product\ProductTemplate}
{block content}
<div class="card">
	<div class="card-header">
		Edit product
	</div>
	<div class="card-body">
		<div class="row">
			<div class="col-12 col-md-8">
				{control form}
			</div>
			<div class="col-12 col-md-4">
				<img n:if="$product->getThumbnail() !== null" src="{$product->getThumbnail()->getPublicPath()}" style="max-width:100%;"/>
				{control thumbnailForm}
			</div>
		</div>
	</div>
</div>
